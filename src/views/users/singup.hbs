<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header text-center">
        Account Register
      </div>
      <div class="card-body">
        <form action="/users/singup" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Name" value={{name}}>
          </div>
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="E-mail" value={{email}}>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password" value={{password}}>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="confirmPassword" placeholder="Cconfirm Password" value={{confirmPassword}}>
          </div>
          <button class="btn btn-primary btn-block">
            Singup
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
